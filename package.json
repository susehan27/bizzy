    "concurrently": "^4.0.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.4",
    "mongoose": "^5.3.6",
    "morgan": "^1.9.1",
    "path": "^0.12.7"
  },
  "proxy": "http://localhost:5000"
}
